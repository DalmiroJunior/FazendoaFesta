<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nof.fazendoafesta.EmpresaAniverNatalieDecoracoesDC1Activity"
    android:background="@color/colorWhiteOff">

    <include layout="@layout/toolbar" android:id="@+id/customToolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageEmpresaAniver"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/usermaior"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/textNomeAniver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Natalie Decorações"
                        android:textSize="22dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageInstaAniver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/instagram"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/imageFacebookAniver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/facebook"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/imageSiteAniver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/site"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textInstaAniver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/textFacebookAniver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Natalie Decorações"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/textSiteAniver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/orcamento"
                    android:onClick="email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorAccent"
                    fancy:fb_focusColor="@color/colorBackground"
                    fancy:fb_radius="30dp"
                    fancy:fb_fontIconResource=""
                    fancy:fb_text="Enviar Email"
                    fancy:fb_textColor="#FFFFFF" >
                </mehdi.sakout.fancybuttons.FancyButton>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorAccent"
                    fancy:fb_focusColor="@color/colorBackground"
                    fancy:fb_fontIconResource="&#xf007;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Ver Localização"
                    fancy:fb_textColor="#FFFFFF" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecaniver"
                        android:layout_marginTop="2dp" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="318dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecaniver2"
                        android:layout_marginTop="1dp"/>

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecaniver3"
                        android:layout_marginTop="1dp"/>

                    <ImageView
                        android:id="@+id/imageView24"
                        android:layout_width="265dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecaniver4"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>


</LinearLayout>
