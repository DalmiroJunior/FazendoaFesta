<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nof.fazendoafesta.EmpresaNatalieDecoracoesBF1Activity"
    android:background="@color/colorWhiteOff">


    <include layout="@layout/toolbar" android:id="@id/customToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageEmpresa"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/usermaior" />

                    <TextView
                        android:id="@+id/textNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"
                        android:layout_weight="1"
                        android:text="Natalie Decorações"
                        android:textSize="22dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageInsta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/instagram" />

                    <ImageView
                        android:id="@+id/imageFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/facebook" />

                    <ImageView
                        android:id="@+id/imageSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/site" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textInsta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--" />

                    <TextView
                        android:id="@+id/textFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Natalie Decorações" />

                    <TextView
                        android:id="@+id/textSite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="--" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/orcamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:onClick="email"
                    android:padding="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorAccent"
                    fancy:fb_focusColor="@color/colorBackground"
                    fancy:fb_fontIconResource=""
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Enviar Email"
                    fancy:fb_textColor="#FFFFFF"></mehdi.sakout.fancybuttons.FancyButton>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/colorAccent"
                    fancy:fb_focusColor="@color/colorBackground"
                    fancy:fb_fontIconResource="&#xf007;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Ver Localização"
                    fancy:fb_textColor="#FFFFFF" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewBoloCas1"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        app:srcCompat="@drawable/nataliesalgado" />

                    <ImageView
                        android:id="@+id/imageViewBoloCas2"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/nataliesalgado2" />

                    <ImageView
                        android:id="@+id/imageBoloCas3"
                        android:layout_width="299dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/nataliesalgado3" />

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>


</LinearLayout>