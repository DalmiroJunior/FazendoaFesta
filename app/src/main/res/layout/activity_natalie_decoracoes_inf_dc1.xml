<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nof.fazendoafesta.EmpresaInfNatalieDecoracoesDC1Activity"
    android:background="@color/colorWhiteOff">

    <include layout="@layout/toolbar" android:id="@id/customToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageEmpresaInf"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:srcCompat="@drawable/usermaior"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/textNomeAniver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Natalie Decorações"
                        android:textSize="22dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageInstaInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/instagram"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/imageFacebookInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/facebook"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/imageSiteInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/site"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="244dp"
                    android:layout_height="82dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textInstaInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/textFacebookInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Natalie Decorações"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/textSiteInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:layout_marginTop="3dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButtonLigarInf"
                    android:autoLink="phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/phone"
                    android:background="@color/colorTransparente"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/orcamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:paddingTop="10dp"
                    android:onClick="email"
                    fancy:fb_borderColor="@color/colorAzulClaro"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="@color/colorFundoB"
                    fancy:fb_fontIconResource=""
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Enviar Email"
                    fancy:fb_textColor="@color/colorCinza" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:onClick="email"
                    android:layout_marginLeft="5dp"
                    fancy:fb_borderColor="@color/colorAzulClaro"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="@color/colorFundoB"
                    fancy:fb_fontIconResource="&#xf007;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Ver Localização"
                    fancy:fb_textColor="@color/colorCinza" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="329dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecinf"
                        android:layout_marginTop="2dp" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="289dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecinf2"
                        android:layout_marginTop="1dp"/>

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="298dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/nataliedecind3"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>


</LinearLayout>
