<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nof.fazendoafesta.EmpresaInfCamilaFestasDC2Activity"
    android:background="@color/colorWhiteOff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageEmpresaInf"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/ic_logo_camila" />

                    <TextView
                        android:id="@+id/textNomeAniver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="45dp"
                        android:layout_weight="1"
                        android:text="Camila Festas"
                        android:textSize="22dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imageInstaInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/instagram" />

                    <ImageView
                        android:id="@+id/imageFacebookInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/facebook" />

                    <ImageView
                        android:id="@+id/imageSiteInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/site" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textInstaInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--" />

                    <TextView
                        android:id="@+id/textFacebookInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="--" />

                    <TextView
                        android:id="@+id/textSiteInf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="--" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/orcamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="email"
                    android:paddingBottom="10dp"
                    android:paddingLeft="36dp"
                    android:paddingRight="36dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="@color/colorAzulClaro"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="@color/colorFundoB"
                    fancy:fb_fontIconResource=""
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Enviar Email"
                    fancy:fb_textColor="@color/colorCinza" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/localizacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:onClick="email"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="@color/colorAzulClaro"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="@color/colorFundoB"
                    fancy:fb_fontIconResource="&#xf007;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Ver Localização"
                    fancy:fb_textColor="@color/colorCinza" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="350dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="2dp"
                        app:srcCompat="@drawable/camiladecinf" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="348dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/camiladecinf2" />

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="347dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="1dp"
                        app:srcCompat="@drawable/camiladecinf3" />
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </ScrollView>

    <include layout="@layout/toolbar" android:id="@id/customToolbar"/>


</LinearLayout>
