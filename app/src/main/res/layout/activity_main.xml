<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dalmirojunior.fazendoafesta.MainActivity"
    android:background="@color/colorBackground">

    <include layout="@layout/toolbar"
        android:id="@+id/customToolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Eventos"
        android:textAlignment="center"
        android:textColor="@color/colorBranca"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

     <LinearLayout
         android:layout_width="37dp"
         android:layout_height="match_parent"
         android:orientation="vertical">


         <ImageView
             android:id="@+id/imageView2"
             android:layout_width="40dp"
             android:layout_height="40dp"
             app:srcCompat="@drawable/casamento" />

         <ImageView
             android:id="@+id/imageView3"
             android:layout_width="35dp"
             android:layout_height="40dp"
             app:srcCompat="@drawable/baloes"
             android:layout_marginTop="5dp"/>

         <ImageView
             android:id="@+id/imageView4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:srcCompat="@drawable/bolo" />
     </LinearLayout>

        <ListView
            android:id="@+id/ListEventos"
            android:layout_width="316dp"
            android:layout_height="188dp">


        </ListView>

    </LinearLayout>



</LinearLayout>
